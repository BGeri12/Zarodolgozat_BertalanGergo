        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <Button
            android:id="@+id/btn_main_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width= "wrap_content"
